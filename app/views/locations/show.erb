<h2><%= @location.city %>, <%= @location.state %></h2>

 <div class="section group">
    <div class="col span_1_of_2" id="box1">
      <h3>Local Events</h3>


    </div>

    <div class="col span_1_of_2" id="box2">
      <h3>Local Groups</h3>
      <div>
        <% @location.groups.each do |group| %>
          <div class="group-name"><%= group.name %></div>
          <div class="group-description"><%= group.description %></div>
        <% end %>
      </div>
    </div>
  </div>
