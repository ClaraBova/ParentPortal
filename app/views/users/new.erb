<h2>Register New User</h2>

  <%= erb :'/_errors', layout: false %>

  <form action="/register" method="POST">
    <div>
      <label for="username">Username:</label>
      <input class="register" id="username" type="text" name="user[username]" placeholder="Username">
    </div>
    <div>
     <label for="email">Email:</label>
     <input class="register" id="email" type="text" name="user[email]" placeholder="Email">
    </div>
    <div>
      <label for="password">Password:</label>
      <input class="register" id="password" type="password" name="user[password]" placeholder="Password">
    </div>
    <div>
      <label for="user_type">User Type:</label>
      <input id="user_type" type="radio" name="user[user_type]" value="basic"> Parent/Caregiver
      <input id="user_type" type="radio" name="user[user_type]" value="business_owner"> Business Owner
      <input id="user_type" type="radio" name="user[user_type]" value="community_organizer"> Community Organizer<br>
    </div>
    <div>
      <label for="location">Location:</label>
      <input class="register" id="location" list="location" placeholder="San Diego, CA" name="user[location]">
        <datalist id="location">
          <% @locations.each do |location| %>
            <option value="<%= location.city %>, <%= location.state %>">
          <% end %>
        </datalist>
      </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
